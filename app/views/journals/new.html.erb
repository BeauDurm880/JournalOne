<h1 class="mb-4 text-center">New Entry</h1>

<div class="container">
  <div class="card mb-4">
    <div class="card-body">
      <%= form_with(model: @entry, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :journal_info, class: "form-label" %>
          <%= form.text_area :journal_info, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.submit "Create Journal", class: "btn btn-primary" %>
          <%= link_to 'Back to Entries', journals_path, class: 'btn btn-secondary ml-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


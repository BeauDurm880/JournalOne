<h1>Edit Journal Entry</h1>

<%= form_with(model: @entry, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :journal_info %>
    <%= form.text_area :journal_info, class: "form-control" %>
  </div>

  <!-- New field for day rating -->
  <div class="form-group">
    <%= form.label :day_rating, 'How would you rate your day?', class: "form-label" %>
    <%= form.number_field :day_rating, class: "form-control", min: 1, max: 10 %>
  </div>

  <div class="form-group">
    <%= form.submit "Update Entry", class: "btn btn-outline-primary" %>
    <%= link_to 'Back to Entries', journals_path, class: 'btn btn-outline-secondary ml-2' %>
  </div>
<% end %>


